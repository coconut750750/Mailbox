<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomMenu"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    tools:context="com.brandon.mailbox.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_menu_text_height"
        android:orientation="horizontal"
        android:id="@+id/linear">
        <Button
            android:id="@+id/bottom_menu_contacts"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:layout_height="@dimen/bottom_menu_text_height"
            android:text="Contacts"
            android:background="@color/primary_material_light"
            android:textAppearance="@style/ralewayReg"/>

        <Button
            android:id="@+id/bottom_menu_chats"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:layout_height="@dimen/bottom_menu_text_height"
            android:text="Chats"
            android:background="@color/primary_material_light"
            android:textAppearance="@style/ralewayReg"/>

        <Button
            android:id="@+id/bottom_menu_me"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:layout_height="@dimen/bottom_menu_text_height"
            android:text="Me"
            android:background="@color/primary_material_light"
            android:textAppearance="@style/ralewayReg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/linear">

        <Button
            android:id="@+id/white1"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/primary_material_light"/>

        <Button
            android:id="@+id/black"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/primary_material_dark"/>

        <Button
            android:id="@+id/white2"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/primary_material_light"/>

    </LinearLayout>

</RelativeLayout>